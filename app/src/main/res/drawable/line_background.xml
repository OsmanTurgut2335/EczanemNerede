<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black Stroke -->
    <item>
        <shape>
            <solid android:color="#d73a3a" /> <!-- Slightly darker red color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Gradient Background -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <gradient
                android:startColor="#d73a3a" /><!-- Slightly darker red color -->
            android:endColor="#d73a3a" <!-- Slightly darker red color -->
            android:angle="45" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
