<!-- res/drawable/bordered_gradient_gray.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Light gray background -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#808080" /> <!-- Dark gray border -->
            <corners android:radius="12dp" /> <!-- Rounded corners for border -->
        </shape>
    </item>
</layer-list>
